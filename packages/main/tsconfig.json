{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "@types/orbit-db"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "experimentalReplAwait": true,
    "compilerOptions": {
      "module": "CommonJS"
    },
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "dist/*"
  ]
}
