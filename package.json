{
  "name": "dapp-agent",
  "private": true,
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "pnpm run -r --workspace-concurrency=1 --filter=./packages build",
    "precompile": "cross-env MODE=production pnpm run build",
    "compile": "electron-builder build --config config/electron-builder.config.js --dir --config.asar=false",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck": "pnpm run -r --workspace-concurrency=1 --filter=./packages typecheck"
  },
  "browserslist": [
    "Chrome 96"
  ],
  "simple-git-hooks_bak": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "2.2.0",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "concurrently": "^6.4.0",
    "cross-env": "7.0.3",
    "dts-for-context-bridge": "0.6.2",
    "electron": "16.0.2",
    "electron-builder": "22.14.5",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.3.0",
    "eslint-plugin-vue": "8.1.1",
    "lint-staged": "12.1.2",
    "playwright": "1.16.3",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.5.2",
    "vite": "2.6.14"
  },
  "dependencies": {
    "config": "workspace:^1.0.0"
  }
}
