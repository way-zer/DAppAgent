{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ESNEXT",
    "target": "ESNEXT",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/"
      ]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./src",
    "node_modules/orbit-db/src",
    "node_modules/orbit-db-access-controllers/src",
    "node_modules/orbit-db-store/src"
  ]
}
